
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <ul class="nav nav-tabs">
        @foreach (var item in ViewBag.menuLevel)
        {
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">@item.Name  </a>
                @if (item.Menu1.Count > 0)
                {
                    <ul class="dropdown-menu">
                        @foreach (var item1 in item.Menu1)
                        {
                            <li><a href="#">@item1.Name</a> </li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
</div>

